<?jelly escape-by-default='true'?>
<j:jelly xmlns:j="jelly:core" 
         xmlns:st="jelly:stapler" 
         xmlns:d="jelly:define" 
         xmlns:l="/lib/layout" 
         xmlns:t="/lib/hudson" 
         xmlns:f="/lib/form"
         xmlns:p="/lib/hudson/project">
  <l:layout permission="${permission}" title="${%VCJob.Control.Title}">
    <l:main-panel>
      <f:form name="create" action="create" method="post">
        <h1>${%VCJob.Control.Title}</h1>
        <p>${%VCJob.Control.Description}</p>
<!-- Manage Project file/details -->
        <f:section title="${%VCJob.Control.Project}">
          <f:entry title="${%VCJob.Control.Project.file.title}" description="${%VCJob.Control.Project.file.description}">
            <input type="file" name="manageProject"/>
          </f:entry>
          <f:entry title="${%VCJob.Control.Project.path.title}" description="${%VCJob.Control.Project.path.description}">
            <f:textbox name="manageProjectName" size="50"/>
          </f:entry>
        </f:section>
<!-- Job type -->
        <f:section title="${%VCJob.Control.JobType}">
          <f:entry title="">
            <f:radio name="jobType" checked="${it.jobType=='MULTI'}"
                     title="${%VCJob.Control.JobType.multi}" value="MULTI"/>
          </f:entry>
          <f:entry title="">
            <f:radio name="jobType" checked="${it.jobType=='SINGLE'}"
                     title="${%VCJob.Control.JobType.single}" value="SINGLE"/>
          </f:entry>
        </f:section>
<!-- Action -->
        <f:section title="${%VCJob.Control.Action}">
          <f:entry title="">
            <f:radio name="action" checked="${it.action=='CREATE'}"
                     title="${%VCJob.Control.Action.create}" value="CREATE"/>
          </f:entry>
          <f:entry title="">
            <f:radio name="action" checked="${it.action=='UPDATE'}"
                     title="${%VCJob.Control.Action.update}" value="UPDATE"/>
          </f:entry>
          <f:entry title="">
            <f:radio name="action" checked="${it.action=='DELETE'}"
                     title="${%VCJob.Control.Action.delete}" value="DELETE"/>
          </f:entry>
        </f:section>
<!-- SCM...-->      
<!--
        <f:section title="${%VCJob.Control.SCM}">
          <f:block>
            <j:forEach var="descriptor" items="${h.getSCMDescriptors(instance)}" varStatus="loop">
               <j:set var="scmd" value="${descriptor}" />
