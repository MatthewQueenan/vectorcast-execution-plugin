                     <st:include from="${descriptor}" page="${descriptor.configPage}" optional="true"/>
                  </f:nested>
               </f:radioBlock>
            </j:forEach>
          </f:block>
       </f:section>
-->
<!-- End SCM...-->
        <f:section title="${%VCJob.Control.Options}">
          <f:block>
            <input type="submit" value="${%VCJob.Control.Submit}" />
          </f:block>
        </f:section>
<!--
      <j:if test="${it.exists}">
        <h2>VectorCAST Job created</h2>
      </j:if>
--> 
      </f:form>
    </l:main-panel>
  </l:layout>
</j:jelly>

